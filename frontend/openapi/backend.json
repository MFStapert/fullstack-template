    "schemas": {
      "UserDto": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "email": { "type": "string" },
          "name": { "type": "string" }
        },
        "required": ["id", "email", "name"]
      },
      "PostDto": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "title": { "type": "string" },
          "content": { "type": "string" },
